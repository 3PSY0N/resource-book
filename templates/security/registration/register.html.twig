{% extends 'public/base.html.twig' %}

{% block body %}
    <main class="mx-auto mt-16 flex w-full max-w-screen-lg grow flex-col items-center justify-center p-4 lg:mt-32">
        <div class="w-full max-w-sm">
            <h1 class='text-xl dark:text-slate-300 font'>Register</h1>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class='mt-4 rounded-md border border-red-500/50 bg-red-400/40 px-4 py-2 text-slate-900 dark:bg-red-400/30 dark:text-slate-100'>{{ flash_error }}</div>
            {% endfor %}

            {{ form_start(form) }}
            <div class="flex flex-col">
                {{ form_label(form.email, 'Identifier', {
                    'label_attr': {
                        'class': 'text-white invisible',
                        'aria-hidden': 'true'
                    },
                }) }}

                {{ form_widget(form.email, {
                    attr: { class: 'block mb-2 w-full rounded-md border border-slate-300 bg-slate-100 px-2 py-2 text-md text-slate-900 shadow-sm transition focus:border-slate-400 focus:ring-2 focus:ring-slate-400 focus:ring-opacity-50 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-100' }
                }) }}

                {{ form_errors(form.email) }}
            </div>

            <div class="flex flex-col">
                {{ form_label(form.plainPassword, 'Password', {
                    'label_attr': {
                        'class': 'text-white invisible',
                        'aria-hidden': 'true'
                    }
                }) }}
                <div class='mb-2'>
                    {{ form_widget(form.plainPassword, {
                        label: 'Password',
                        attr: { class: 'block w-full rounded-md border border-slate-300 bg-slate-100 px-2 py-2 text-md text-slate-900 shadow-sm transition focus:border-slate-400 focus:ring-2 focus:ring-slate-400 focus:ring-opacity-50 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-100' }
                    }) }}
                </div>

                {{ form_errors(form.plainPassword) }}
            </div>

            <div class="mt-8 text-center">
                <button type="submit"
                        class="rounded-md border border-slate-300 bg-slate-100 px-4 py-2 text-slate-900 shadow-sm transition dark:hover:bg-slate-700 hover:bg-slate-200 dark:border-slate-700 dark:text-slate-100 dark:bg-slate-800 dark:border-slate-70 text-md focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-opacity-50">
                    Register
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
