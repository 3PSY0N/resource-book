{% for article in articles %}
    <article class="relative mt-10 break-inside-avoid rounded-lg border border-slate-200 bg-slate-200 p-4 shadow transition duration-200 group first:mt-0 hover:bg-slate-100 hover:shadow-lg dark:shadow-slate-950 dark:border-slate-700 dark:bg-slate-800 dark:hover:bg-slate-700">
        <header>
            <h2 class="mr-20 text-lg text-slate-500 transition hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300">
                <a class="relative block" href="{{ path('admin_article_show', { slug: article.slug }) }}">
                    {{ article.title }}
                </a>
            </h2>
        </header>

        <div class="absolute -top-7 right-0 flex flex-col gap-2 p-2 md:flex-row">
            <a title="Edit" href="{{ path('admin_article_edit', {'uid': article.uid}) }}"
               class="rounded-md border border-slate-300 bg-slate-100 p-2 transition hover:cursor-pointer hover:bg-blue-400 dark:border-slate-700 dark:bg-slate-600 dark:hover:bg-blue-400">
                <svg class="h-6 w-6 stroke-slate-500 transition dark:stroke-slate-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125"/>
                </svg>
            </a>
            <form method="post" action="{{ path('admin_article_delete', { 'uid': article.uid }) }}" onsubmit="return confirm('Are you sure you want to delete this article?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.uid) }}">
                <button title="Delete" class="rounded-md border border-slate-300 bg-slate-100 p-2 transition hover:cursor-pointer hover:bg-red-400 dark:border-slate-700 dark:bg-slate-600 dark:hover:bg-red-400">
                    <svg class="h-6 w-6 stroke-slate-500 transition dark:stroke-slate-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
                    </svg>
                </button>
            </form>
        </div>

        <footer class="mt-4 flex flex-wrap flex-col text-xs md:flex-row justify-end">
            <div class="flex grow flex-wrap gap-1.5">
                {% for tag in article.tags %}
                    {% include('_global/_tags.html.twig') with {'tag': tag} %}
                {% endfor %}
            </div>
            <div class="mt-2 flex cursor-help items-center justify-end text-slate-400 dark:text-slate-500">
                <span>Published: <time class="cursor-help" title="{{ article.createdAt|date("c", "Europe/Paris") ~ 'GMT' }}" datetime="{{ article.createdAt|date("c", "Europe/Paris") }}">{{ article.createdAt|date("Y/m/d - H:i", "Europe/Paris") }}</time></span>
            </div>
        </footer>
    </article>
{% endfor %}