{% extends 'public/base.html.twig' %}

{% block body %}
<main class="mx-auto mt-16 w-full max-w-screen-lg grow p-4 lg:mt-32">
    <h1 class="mt-8 text-center text-5xl font-medium text-slate-900 dark:text-slate-300">Tags</h1>

    <div class="text-lg text-center font-light text-slate-500 dark:text-slate-400 mt-4">
        <span class="font-bold">{{ tags|length }}</span> tags available.
        <p class="text-center text-slate-400">Click on tag to find related articles</p>
    </div>

    <section class="mt-16 flex flex-wrap justify-center gap-4">
        {% for tag in tags %}
            {% include '_global/_tags_with_counter.html.twig' with { 'tag': tag } %}
        {% endfor %}
    </section>
</main>
{% endblock %}
