{% extends 'base.html.twig' %}

{% set title = "Articles" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <main class="mx-auto mt-16 w-full max-w-screen-2xl grow p-4">
        <h1 class="my-12 text-center text-5xl font-medium text-slate-900 font-rajdhani">{{ title }}</h1>

        <div class="flex justify-end pb-4">
            <a class="rounded bg-slate-50 px-4 py-2 font-medium transition hover:bg-slate-600 hover:text-white text-sm self-center" href="{{ path('app_article_new') }}">Create new</a>
        </div>

        <div class="overflow-scroll rounded-lg border border-gray-200 shadow-md max-w-">
            <table class="w-full border-collapse bg-white text-left text-sm text-gray-500 table-auto">
                <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">id</th>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">uid</th>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Title</th>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">CreatedAt</th>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">UpdatedAt</th>
                    <th scope="col" class="px-6 py-4 font-medium text-gray-900 text-center">Actions</th>
                </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 border-t border-gray-100">
                {% for data in articles %}

                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-xs whitespace-nowrap">#{{ data.article.id }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ data.article.uid }}</td>
                    <td class="px-6 py-4 whitespace-nowrap"><a href="{{ path('app_article_show', { 'slug': data.article.slug }) }}">{{ data.article.title }}</a></td>

                    <td class="px-6 py-4 whitespace-nowrap">{{ data.article.createdAt|date("m/d/Y - H:i:s", "Europe/Paris") }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ data.article.updatedAt|date("m/d/Y - H:i:s", "Europe/Paris") }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex justify-center gap-4">
                            <a title="Edit" href="{{ path('app_article_edit', {'id': data.article.id}) }}">
                                <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 transition hover:stroke-blue-500">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125"/>
                                </svg>
                            </a>
                            {{ include('article/_delete_index_btn.html.twig') }}
                        </div>
                    </td>
                </tr>
                {% else %}
                    <tr>
                        <td class="px-6 py-4 text-center" colspan="6">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div>
            {{ knp_pagination_render(articles) }}
        </div>
    </main>
{% endblock %}
