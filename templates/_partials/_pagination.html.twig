{% if pageCount > 1 %}
    <nav class="flex border-t border-slate-200/60 px-4 sm:px-0">
        <div class="flex grow md:-mt-px">
            {% if first is defined and current != first %}
                <div>
                    <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" class="inline-flex items-center border-t-2 border-transparent pt-4 pr-1 text-sm font-medium text-slate-500 transition-all duration-300 hover:border-indigo-300 hover:text-slate-700">
                        <svg class="h-5 w-5 text-slate-400" viewBox="0 0 24 24"><path fill="currentColor" d="m11 18l-6-6l6-6l1.4 1.4L7.825 12l4.575 4.6L11 18Zm6.6 0l-6-6l6-6L19 7.4L14.425 12L19 16.6L17.6 18Z"/></svg>
                        <span>Prev</span>
                    </a>
                </div>
            {% endif %}

            {% if previous is defined %}
                <div>
                    <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" class="inline-flex items-center border-t-2 border-transparent pt-4 pr-1 text-sm font-medium text-slate-500 transition-all duration-300 hover:border-indigo-300 hover:text-slate-700">
                        <svg class="h-5 w-5 text-slate-400" viewBox="0 0 24 24"><path fill="currentColor" d="m14 18l-6-6l6-6l1.4 1.4l-4.6 4.6l4.6 4.6L14 18Z"/></svg>
                        <span>Prev</span>
                    </a>
                </div>
            {% endif %}
        </div>
        <div class="hidden grow sm:flex md:-mt-px">
            {% for page in pagesInRange %}
                {% if page != current %}
                    <a class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-slate-500 transition-all duration-300 hover:border-indigo-300 hover:text-slate-700" aria-current="page" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                {% else %}
                    <span class="inline-flex items-center border-t-2 border-indigo-500 px-4 pt-4 text-sm font-medium text-indigo-600 transition-all duration-300">{{ page }}</span>
                {% endif %}
            {% endfor %}
        </div>
        <div class="flex md:-mt-px">
            {% if next is defined %}
                <div>
                    <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" class="inline-flex items-center border-t-2 border-transparent pt-4 pl-1 text-sm font-medium text-slate-500 transition-all duration-300 hover:border-indigo-300 hover:text-slate-700">
                        <span>Next</span>
                        <svg class="h-5 w-5 text-slate-400" viewBox="0 0 24 24"><path fill="currentColor" d="M9.4 18L8 16.6l4.6-4.6L8 7.4L9.4 6l6 6l-6 6Z"/></svg>
                    </a>
                </div>
            {% endif %}

            {% if last is defined and current != last %}
                <div>
                    <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" class="inline-flex items-center border-t-2 border-transparent pt-4 pl-1 text-sm font-medium text-slate-500 transition-all duration-300 hover:border-indigo-300 hover:text-slate-700">
                        <span>Last</span>
                        <svg class="h-5 w-5 text-slate-400" viewBox="0 0 24 24"><path fill="currentColor" d="M6.4 18L5 16.6L9.575 12L5 7.4L6.4 6l6 6l-6 6Zm6.6 0l-1.4-1.4l4.575-4.6L11.6 7.4L13 6l6 6l-6 6Z"/></svg>
                    </a>
                </div>
            {% endif %}
        </div>
    </nav>
{% endif %}