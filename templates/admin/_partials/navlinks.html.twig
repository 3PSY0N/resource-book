    {
        'title': 'Tags',
        'action': 'submenu',
        'sublist': [
        {
            'title': 'List',
            'routeName': 'admin_tag_index',
            'relatedRoutes': ['admin_tag_index'],
        },
        {
            'title': 'New',
            'routeName': 'admin_tag_new',
            'relatedRoutes': ['admin_tag_new'],
        },
    ]
    },
