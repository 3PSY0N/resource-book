    <div class="w-full sm:max-w-xs lg:hidden" aria-description="search">
        <form method="get" action="{{ path('public_article_search') }}">
            <label for="search" class="sr-only">Search</label>
            <div class="relative">
                <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                    <svg class="h-5 w-5 text-slate-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
                    </svg>
                </div>
                <input id="search" name="q" class="block w-full rounded-md border border-slate-300 bg-slate-100 px-2 py-2 pr-3 pl-10 text-slate-900 shadow-sm transition focus:border-slate-400 focus:ring-2 focus:ring-slate-400 focus:ring-opacity-50 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-100" placeholder="Search articles.." type="search">
            </div>
        </form>
    </div>
    <nav class="flex flex-1 flex-col">
        <ul role="list" class="flex flex-1 flex-col gap-y-7">
            <li>
                <ul role="list" class="-mx-2 space-y-1 text-slate-900 dark:text-slate-300 [&>li]:rounded-md [&>li]:text-sm [&>li]:font-semibold">
                    {% for navLink in mainLinks %}
                        {% if navLink.granted is defined and navLink.role is defined and navLink.granted %}
                            {% if is_granted(navLink.role) %}
                                <li class="{{ linkClassList }}">
                                    <a {{ isPageActive(navLink.relatedRoutes, activeLinkClassList)|raw }} href="{{ path(navLink.routeName) }}">
                                        {{ navLink.title }}
                                    </a>
                                </li>
                            {% endif %}
                        {% elseif navLink.role is defined %}
                            {% if not is_granted(navLink.role) %}
                                <li class="{{ linkClassList }}">
                                    <a {{ isPageActive(navLink.relatedRoutes, activeLinkClassList)|raw }} href="{{ path(navLink.routeName) }}">
                                        {{ navLink.title }}
                                    </a>
                                </li>
                            {% endif %}
                        {% elseif navLink.action is defined and navLink.action == 'submenu' %}
                            {% if navLink.sublist is defined %}
                                <li>
                                    <div x-data="{ open: false }">
                                        <button type="button" class="flex w-full justify-between rounded-md p-2 text-slate-900 transition hover:bg-slate-300 hover:text-slate-900 dark:text-slate-100 dark:hover:bg-slate-100/30" aria-controls="menu-{{ loop.index }}-sub"
                                                @click="open = !open" aria-expanded="false" x-bind:aria-expanded="open.toString()"
                                        >
                                            {{ navLink.title }}
                                            <svg class="h-5 w-5 shrink-0 text-slate-500"
                                                 x-state:on="Expanded" x-state:off="Collapsed" :class="{'rotate-90': open}" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"></path>
                                            </svg>
                                        </button>
                                        <ul x-description="Expandable link section" class="mt-1 px-2" id="menu-{{ loop.index }}-sub" x-show="open" style="display: none;">
                                            {% for link in navLink.sublist %}
                                                <li class="mt-1 {{ linkClassList }}">
                                                    <a href="{{ path(link.routeName) }}" {{ isPageActive(link.relatedRoutes, activeLinkClassList)|raw }}>{{ link.title }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </li>
                            {% endif %}
                        {% else %}
                            <li class="{{ linkClassList }}">
                                <a {{ isPageActive(navLink.relatedRoutes, activeLinkClassList)|raw }} href="{{ path(navLink.routeName) }}">
                                    {{ navLink.title }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </li>
            <li class="-mx-6 mt-auto flex">
                <a href="#" class="flex grow items-center gap-x-4 px-6 py-3 text-sm font-semibold leading-6 text-gray-900 hover:bg-gray-50">
                    <svg class="h-8 w-8 rounded-full fill-slate-900 dark:fill-slate-100" viewBox="0 0 24 24">
                        <path d="M12 12q-1.65 0-2.825-1.175T8 8q0-1.65 1.175-2.825T12 4q1.65 0 2.825 1.175T16 8q0 1.65-1.175 2.825T12 12Zm-8 8v-2.8q0-.85.438-1.563T5.6 14.55q1.55-.775 3.15-1.163T12 13q1.65 0 3.25.388t3.15 1.162q.725.375 1.163 1.088T20 17.2V20H4Z" />
