        'title': 'Dashboard',
        'routeName': 'admin_dashboard_index',
        'relatedRoutes': ['admin_dashboard_index'],
    },
    {
        'title': 'Articles',
        'routeName': 'public_article_index',
        'relatedRoutes': ['public_article_index'],
