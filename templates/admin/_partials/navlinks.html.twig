        'title': 'Article',
        'action': 'submenu',
        'sublist': [
        {
            'title': 'List',
            'routeName': 'admin_article_index',
            'relatedRoutes': ['admin_article_index'],
        },
        {
            'title': 'New',
            'routeName': 'admin_article_new',
            'relatedRoutes': ['admin_article_new'],
