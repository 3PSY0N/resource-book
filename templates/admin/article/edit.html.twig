{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
    {{ vite_entry_link_tags('hljs') }}
    {{ vite_entry_link_tags('easymde') }}
    {{ vite_entry_link_tags('choices') }}
    {{ vite_entry_link_tags('coloris') }}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('hljs') }}
    {{ vite_entry_script_tags('easymde') }}
    {{ vite_entry_script_tags('choices') }}
    {{ vite_entry_script_tags('coloris') }}
    {{ vite_entry_script_tags('newTagHandler') }}
{% endblock %}

{% set title = "Edit Article: " ~ article.title %}

{% block title %}{{ "Edit Article: " ~ article.title }}{% endblock %}

{% block body %}
    <main class="mx-auto w-full max-w-screen-lg grow p-4">
        <div class="flex justify-end gap-2">
            <a class="self-center rounded bg-slate-100 px-4 py-2 text-sm font-medium transition hover:bg-slate-600 hover:text-slate-100 dark:bg-slate-700 dark:text-slate-100 dark:hover:bg-slate-600 dark:hover:text-slate-100" href="{{ path('admin_article_index') }}">Back to Articles</a>
            <div class="flex content-center py-2">
                {{ include('admin/article/_delete_form.html.twig') }}
            </div>
        </div>

        <h1 class="mt-4 mb-12 inline-flex text-center text-4xl font-medium text-slate-900 dark:text-slate-100">{{ title }}</h1>

        {{ include('admin/article/_form.html.twig') }}
    </main>
{% endblock %}
